<!-- List<Estudiante> lista; -->
 
 <a href="">Agregar</a>

 <h1>Lista de estudiante</h1>
<table class="table table-dark table-striped" id="tablelist">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Nombres</th>
      <th scope="col">Apellidos</th>
      <th>
        <th scope="col">Opciones</th>
      </th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in ViewBag.list)
    {
      <tr>
        <td>@item.Id</td>
        <td>@item.Name</td>
        <td>@item.LastName</td>
        <td>
          <td>
          @Html.ActionLink("Delete","DeleteDB",new{id=@item.Id},new{@class="btn btn-danger"})
          </td>
          <td>
          @Html.ActionLink("Load","Load",new{id=@item.Id},new{@class="btn btn-warning"})
          </td>
        </td>
      </tr>
    }
  </tbody>
</table>

@section scripts{
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>

    <script>
      $(document).ready(function(){
        //alert("Read load");
        var tabla = $('#tablelist').DataTable();
      });
    </script>
}